<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Simple SEO Import: DOMContentLoaded');
    const csvImporter = {
        currentStep: 1,
        csvData: null,
        fieldMappings: {},
        skipFirstRow: false,
        
        init() {
            this.setupEventListeners();
            this.updateStepVisibility();
        },
        
        setupEventListeners() {
            // File upload
            document.getElementById('csv-file').addEventListener('change', (e) => {
                this.handleFileUpload(e.target.files[0]);
            });
            
            // Dropzone
            const dropzone = document.getElementById('upload-dropzone');
            dropzone.addEventListener('click', () => {
                document.getElementById('csv-file').click();
            });
            
            dropzone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropzone.classList.add('dragover');
            });
            
            dropzone.addEventListener('dragleave', () => {
                dropzone.classList.remove('dragover');
            });
            
            dropzone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropzone.classList.remove('dragover');
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    this.handleFileUpload(files[0]);
                }
            });
            
            // Navigation
            document.getElementById('prev-step').addEventListener('click', () => {
                this.goToPrevStep();
            });
            
            document.getElementById('next-step').addEventListener('click', (e) => {
                console.log('Next step button clicked');
                e.preventDefault();
                this.goToNextStep();
            });
            
            document.getElementById('import-btn').addEventListener('click', () => {
                this.performImport();
            });

            // Skip first row checkbox toggle
            document.getElementById('skip-first-row').addEventListener('change', () => {
                this.updateFirstRowVisibility();
            });

            // Top navigation buttons
            document.getElementById('top-prev-step').addEventListener('click', () => {
                this.goToPrevStep();
            });
            
            document.getElementById('top-import-btn').addEventListener('click', () => {
                this.performImport();
            });
        },
        
        handleFileUpload(file) {
            if (!file) return;
            
            if (file.type !== 'text/csv' && !file.name.endsWith('.csv')) {
                alert('Please upload a CSV file');
                return;
            }
            
            this.showLoading();
            
            const formData = new FormData();
            formData.append('csvFile', file);
            
            fetch('{{ actionUrl('simple-seo-import/import/upload-csv') }}', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': '{{ csrfToken }}'
                }
            })
            .then(response => response.json())
            .then(data => {
                this.hideLoading();
                if (data.success) {
                    this.csvData = data;
                    this.showFileSuccess(file.name, data.totalRows);
                    this.populateCSVFields(data.headers);
                    this.populateCSVPreview(data.previewData, data.headers);
                    this.showCSVPreview();
                    this.hideValidationError(); // Hide validation error when file is uploaded
                } else {
                    alert('Error uploading CSV: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                this.hideLoading();
                console.error('Error:', error);
                alert('Error uploading CSV file');
            });
        },
        
        showFileSuccess(fileName, totalRows) {
            const dropzone = document.getElementById('upload-dropzone');
            dropzone.classList.add('success');
            
            dropzone.innerHTML = `
                <div class="file-success">
                    <div class="file-success-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                            <polyline points="14,2 14,8 20,8"/>
                            <path d="M9 15l2 2 4-4"/>
                        </svg>
                    </div>
                    <div class="file-success-name">${fileName}</div>
                    <div class="file-success-hint">Successfully uploaded • ${totalRows} rows found</div>
                </div>
            `;
        },
        
        populateCSVFields(headers) {
            const container = document.getElementById('csv-fields-list');
            container.innerHTML = '';
            
            headers.forEach(header => {
                const fieldDiv = document.createElement('div');
                fieldDiv.className = 'csv-field';
                fieldDiv.textContent = header;
                fieldDiv.draggable = true;
                fieldDiv.dataset.field = header;
                
                fieldDiv.addEventListener('dragstart', (e) => {
                    e.dataTransfer.setData('text/plain', header);
                    fieldDiv.classList.add('dragging');
                });
                
                fieldDiv.addEventListener('dragend', () => {
                    fieldDiv.classList.remove('dragging');
                });
                
                // Add double-click convenience feature
                fieldDiv.addEventListener('dblclick', () => {
                    this.mapFieldToNextAvailable(header);
                });
                
                container.appendChild(fieldDiv);
            });
            
            // Setup drop zones
            this.setupDropZones();
            
            // Setup base entry change listener
            this.setupBaseEntryListener();
        },
        
        setupDropZones() {
            const dropZones = document.querySelectorAll('.field-drop-zone');

            dropZones.forEach(zone => {
                // Store original text for restoration
                zone.setAttribute('data-original-text', zone.textContent.trim());
                zone.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    e.dataTransfer.dropEffect = 'move';
                    // Don't highlight if dragging over the same zone it's already in
                    if (!zone.classList.contains('dragging')) {
                        zone.classList.add('dragover');
                    }
                });

                zone.addEventListener('dragleave', () => {
                    zone.classList.remove('dragover');
                });

                zone.addEventListener('drop', (e) => {
                    e.preventDefault();
                    zone.classList.remove('dragover');

                    const csvField = e.dataTransfer.getData('text/plain');
                    const targetField = zone.parentElement.dataset.target;

                    // Don't remap to the same field
                    if (this.fieldMappings[csvField] === targetField) {
                        return;
                    }

                    this.mapField(csvField, targetField, zone);
                });
            });
        },
        
        mapField(csvField, targetField, zone) {
            // Remove any existing mapping for this CSV field
            this.unmapCsvField(csvField);

            // Set the new mapping
            this.fieldMappings[csvField] = targetField;

            // Update the UI
            zone.innerHTML = `
                ${csvField}
                <button type="button" class="field-remove-btn" data-csv-field="${csvField}">×</button>
            `;
            zone.classList.add('mapped');

            // Make the entire zone draggable
            zone.setAttribute('draggable', 'true');
            zone.style.cursor = 'move';

            // Add dragstart event to the zone itself
            const dragStartHandler = (e) => {
                e.dataTransfer.setData('text/plain', csvField);
                e.dataTransfer.effectAllowed = 'move';
                zone.classList.add('dragging');
            };

            const dragEndHandler = (e) => {
                zone.classList.remove('dragging');
            };

            // Remove old listeners if they exist
            zone.removeEventListener('dragstart', zone._dragStartHandler);
            zone.removeEventListener('dragend', zone._dragEndHandler);

            // Store handlers for cleanup
            zone._dragStartHandler = dragStartHandler;
            zone._dragEndHandler = dragEndHandler;

            zone.addEventListener('dragstart', dragStartHandler);
            zone.addEventListener('dragend', dragEndHandler);

            // Add remove button event listener
            const removeBtn = zone.querySelector('.field-remove-btn');
            removeBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                this.unmapField(csvField, zone);
            });

            this.checkMappingComplete();
        },
        
        mapFieldToNextAvailable(csvField) {
            // Find all drop zones (both mapped and unmapped) in DOM order
            const allDropZones = document.querySelectorAll('.field-drop-zone');
            const dropZonesArray = Array.from(allDropZones);

            // Find the last mapped field's index
            let lastMappedIndex = -1;
            dropZonesArray.forEach((zone, index) => {
                if (zone.classList.contains('mapped')) {
                    lastMappedIndex = index;
                }
            });

            // Find the first unmapped field AFTER the last mapped field
            for (let i = lastMappedIndex + 1; i < dropZonesArray.length; i++) {
                const zone = dropZonesArray[i];
                if (!zone.classList.contains('mapped')) {
                    const targetField = zone.parentElement.dataset.target;
                    this.mapField(csvField, targetField, zone);
                    return;
                }
            }

            // If no unmapped field found after last mapped, try from the beginning
            // (handles case where user unmaps fields in the middle)
            for (let i = 0; i <= lastMappedIndex; i++) {
                const zone = dropZonesArray[i];
                if (!zone.classList.contains('mapped')) {
                    const targetField = zone.parentElement.dataset.target;
                    this.mapField(csvField, targetField, zone);
                    return;
                }
            }
        },
        
        unmapField(csvField, zone) {
            // Remove from mappings
            delete this.fieldMappings[csvField];

            // Remove draggable attributes and listeners
            zone.removeAttribute('draggable');
            zone.style.cursor = '';
            zone.removeEventListener('dragstart', zone._dragStartHandler);
            zone.removeEventListener('dragend', zone._dragEndHandler);
            delete zone._dragStartHandler;
            delete zone._dragEndHandler;

            // Reset UI - remove all drag-related classes
            zone.textContent = zone.getAttribute('data-original-text') || 'Drop field here';
            zone.classList.remove('mapped', 'dragging');

            this.checkMappingComplete();
        },
        
        unmapCsvField(csvField) {
            // Find and unmap any existing mapping for this CSV field
            if (this.fieldMappings[csvField]) {
                const targetField = this.fieldMappings[csvField];
                const existingZone = document.querySelector(`[data-target="${targetField}"] .field-drop-zone.mapped`);
                if (existingZone) {
                    this.unmapField(csvField, existingZone);
                }
            }
        },
        
        setupBaseEntryListener() {
            // Listen for changes to the base entry field
            const observer = new MutationObserver(() => {
                this.checkMappingComplete();
            });
            
            // Observe the entire template entry selector area for changes
            const templateEntryContainer = document.querySelector('.template-entry-selector');
            if (templateEntryContainer) {
                observer.observe(templateEntryContainer, {
                    childList: true,
                    subtree: true,
                    attributes: true,
                    attributeFilter: ['value']
                });
            }

            // Also listen for direct input changes
            document.addEventListener('change', (e) => {
                if (e.target.name === 'templateEntry' || e.target.closest('.template-entry-selector')) {
                    this.checkMappingComplete();
                }
            });
        },
        
        populateCSVPreview(previewData, headers) {
            const container = document.getElementById('csv-preview');

            let html = '<table><thead><tr>';
            headers.forEach(header => {
                html += `<th>${header}</th>`;
            });
            html += '</tr></thead><tbody>';

            // Show all CSV data, mark first row for conditional hiding
            previewData.forEach((row, index) => {
                const firstRowClass = index === 0 ? ' class="csv-first-row"' : '';
                html += `<tr${firstRowClass}>`;
                headers.forEach(header => {
                    html += `<td>${row[header] || ''}</td>`;
                });
                html += '</tr>';
            });
            html += '</tbody></table>';

            container.innerHTML = html;

            // Update first row visibility based on checkbox state
            this.updateFirstRowVisibility();
        },

        updateFirstRowVisibility() {
            const skipFirstRow = document.getElementById('skip-first-row')?.checked || false;
            const firstRow = document.querySelector('.csv-first-row');

            if (firstRow) {
                if (skipFirstRow) {
                    firstRow.style.display = 'none';
                } else {
                    firstRow.style.display = '';
                }
            }
        },
        
        checkMappingComplete() {
            const hasBaseEntry = this.hasBaseEntry();
            const requiredFields = ['hierarchy.address', 'entry.slug', 'entry.title', 'seomatic.meta.title', 'seomatic.meta.description'];
            const mappedFields = Object.values(this.fieldMappings);
            const allFieldsMapped = requiredFields.every(field => mappedFields.includes(field));
            // At least one H1 field (heroTitle OR pageHeader) must be mapped
            const hasH1Field = mappedFields.includes('entry.heroTitle') || mappedFields.includes('entry.pageHeader');

            console.log('Checking mapping complete:', {
                hasBaseEntry,
                allFieldsMapped,
                hasH1Field,
                mappedFields,
                fieldMappings: this.fieldMappings
            });

            if (hasBaseEntry && allFieldsMapped && hasH1Field) {
                this.hideValidationError();
            }
            // Don't disable button - let validation happen on click
        },
        
        goToNextStep() {
            console.log('goToNextStep called, current step:', this.currentStep);
            
            // Validate requirements for current step
            if (this.currentStep === 1) {
                if (!this.csvData) {
                    this.showValidationError('Upload a CSV file before continuing.');
                    return;
                }
            } else if (this.currentStep === 2) {
                const hasBaseEntry = this.hasBaseEntry();
                const requiredFields = ['hierarchy.address', 'entry.slug', 'entry.title', 'seomatic.meta.title', 'seomatic.meta.description'];
                const mappedFields = Object.values(this.fieldMappings);
                const allFieldsMapped = requiredFields.every(field => mappedFields.includes(field));
                // At least one H1 field (heroTitle OR pageHeader) must be mapped
                const hasH1Field = mappedFields.includes('entry.heroTitle') || mappedFields.includes('entry.pageHeader');

                if (!hasBaseEntry) {
                    this.showValidationError('Please select a base entry before continuing.');
                    return;
                }

                if (!allFieldsMapped) {
                    this.showValidationError('Please map all required fields before continuing.');
                    return;
                }

                if (!hasH1Field) {
                    this.showValidationError('Please map either Hero Title or Page Header before continuing.');
                    return;
                }
            }
            
            // Hide validation error if we get here
            this.hideValidationError();
            
            if (this.currentStep < 3) {
                this.currentStep++;
                this.updateStepVisibility();
                
                if (this.currentStep === 3) {
                    this.loadPreview();
                }
            } else {
                console.log('Cannot go to next step, already at step 3');
            }
        },
        
        goToPrevStep() {
            if (this.currentStep > 1) {
                this.currentStep--;
                this.updateStepVisibility();
            }
        },
        
        updateStepVisibility() {
            // Update step indicators
            document.querySelectorAll('.step').forEach((step, index) => {
                if (index + 1 <= this.currentStep) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });
            
            // Update progress line
            const progressPercentage = ((this.currentStep - 1) / 2) * 100; // 2 = max steps - 1
            const progressLineFill = document.querySelector('.progress-line-fill');
            if (progressLineFill) {
                progressLineFill.style.width = progressPercentage + '%';
            }
            
            // Update step content
            document.querySelectorAll('.step-content').forEach((content, index) => {
                if (index + 1 === this.currentStep) {
                    content.classList.remove('hidden');
                } else {
                    content.classList.add('hidden');
                }
            });
            
            // Show/hide CSV preview section
            const csvPreviewSection = document.getElementById('csv-preview-section');
            if (csvPreviewSection && this.csvData) {
                if (this.currentStep === 2) {
                    csvPreviewSection.classList.remove('hidden');
                } else {
                    csvPreviewSection.classList.add('hidden');
                }
            }
            
            // Show/hide success message and top navigation on step 3
            const successMessage = document.getElementById('success-message');
            const topNavigation = document.getElementById('top-navigation');
            
            if (this.currentStep === 3) {
                if (successMessage) successMessage.classList.remove('hidden');
                if (topNavigation) topNavigation.classList.remove('hidden');
            } else {
                if (successMessage) successMessage.classList.add('hidden');
                if (topNavigation) topNavigation.classList.add('hidden');
            }
            
            // Update navigation buttons
            const prevBtn = document.getElementById('prev-step');
            const nextBtn = document.getElementById('next-step');
            const importBtn = document.getElementById('import-btn');
            
            prevBtn.style.display = this.currentStep > 1 ? 'inline-block' : 'none';
            nextBtn.style.display = this.currentStep < 3 ? 'inline-block' : 'none';
            importBtn.style.display = this.currentStep === 3 ? 'inline-block' : 'none';
            
            // Always enable next button so validation messages can show
            nextBtn.disabled = false;
            
            // Hide validation error when navigating
            this.hideValidationError();
        },
        
        enableNextStep() {
            document.getElementById('next-step').disabled = false;
        },
        
        loadPreview() {
            const templateEntry = document.querySelector('#template-entry input[type="hidden"]');
            if (!templateEntry || !templateEntry.value) {
                alert('Please select a template entry');
                return;
            }

            const parentEntry = document.querySelector('#parent-entry input[type="hidden"]');
            const parentEntryId = parentEntry?.value || null;

            this.showLoading();

            fetch('{{ actionUrl('simple-seo-import/import/preview') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': '{{ csrfToken }}'
                },
                body: JSON.stringify({
                    baseEntryId: templateEntry.value,
                    fieldMappings: this.fieldMappings,
                    skipFirstRow: document.getElementById('skip-first-row').checked,
                    parentEntryId: parentEntryId
                })
            })
            .then(response => {
                console.log('Preview response status:', response.status);
                if (!response.ok) {
                    return response.text().then(text => {
                        console.error('Server response:', text);
                        throw new Error(`HTTP ${response.status}: ${text.substring(0, 200)}...`);
                    });
                }
                return response.json();
            })
            .then(data => {
                this.hideLoading();
                if (data.success) {
                    this.populatePreview(data.entries);
                } else {
                    alert('Error loading preview: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                this.hideLoading();
                console.error('Error:', error);
                alert('Error loading preview: ' + error.message);
            });
        },
        
        populatePreview(entries) {
            const container = document.getElementById('import-preview');
            
            let html = '';
            entries.forEach(entry => {
                // Strip HTML tags from heroTitle and pageHeader to show just the text content
                const heroTitleText = entry.heroTitle ? entry.heroTitle.replace(/<[^>]*>/g, '') : '';
                const pageHeaderText = entry.pageHeader ? entry.pageHeader.replace(/<[^>]*>/g, '') : '';

                // Calculate indentation based on depth
                const depth = entry.depth || 0;
                const indentLevel = Math.max(0, depth - 1); // Subtract 1 so top-level entries have no indent
                const indentPx = indentLevel * 60; // 60px per level for more visible indentation

                // Create hierarchy indicator
                let hierarchyInfo = '';
                if (depth > 1 && entry.parentSlug) {
                    hierarchyInfo = `<p class="hierarchy-info"><strong>Parent:</strong> ${entry.parentSlug} <span class="depth-indicator">Level ${depth}</span></p>`;
                } else if (depth === 1) {
                    hierarchyInfo = `<p class="hierarchy-info"><span class="depth-indicator">Top Level</span></p>`;
                } else if (depth === 0) {
                    hierarchyInfo = `<p class="hierarchy-info"><span class="depth-indicator">Root Level</span></p>`;
                }

                html += `
                    <div class="preview-entry hierarchy-entry" style="margin-left: ${indentPx}px;" data-depth="${depth}">
                        <div class="entry-header">
                            <h4>${entry.title}</h4>
                            ${hierarchyInfo}
                        </div>
                        <div class="entry-details">
                            <p><strong>Slug:</strong> ${entry.slug}</p>
                            ${entry.url ? `<p><strong>URL:</strong> ${entry.url}</p>` : ''}
                            <p><strong>Hero Title:</strong> ${heroTitleText}</p>
                            <p><strong>Page Header:</strong> ${pageHeaderText}</p>
                            <p><strong>SEO Title:</strong> ${entry.seoTitle}</p>
                            <p><strong>SEO Description:</strong> ${entry.seoDescription}</p>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        },
        
        performImport() {
            const templateEntry = document.querySelector('#template-entry input[type="hidden"]');
            if (!templateEntry || !templateEntry.value) {
                alert('Please select a template entry');
                return;
            }

            const parentEntry = document.querySelector('#parent-entry input[type="hidden"]');
            const parentEntryId = parentEntry?.value || null;

            if (!confirm('Are you sure you want to import all entries? This action cannot be undone.')) {
                return;
            }

            this.showLoading();

            fetch('{{ actionUrl('simple-seo-import/import/import') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': '{{ csrfToken }}'
                },
                body: JSON.stringify({
                    baseEntryId: templateEntry.value,
                    fieldMappings: this.fieldMappings,
                    skipFirstRow: document.getElementById('skip-first-row').checked,
                    parentEntryId: parentEntryId
                })
            })
            .then(response => {
                console.log('Import response received:', response);
                return response.json();
            })
            .then(data => {
                console.log('Import data:', data);
                this.hideLoading();
                this.showImportReport(data);
            })
            .catch(error => {
                this.hideLoading();
                console.error('Import error:', error);
                this.showImportReport({
                    success: false,
                    message: 'Network error: ' + error.message,
                    importedCount: 0,
                    errors: ['Failed to connect to the server. Please try again.']
                });
            });
        },
        
        showLoading() {
            document.getElementById('loading-overlay').classList.remove('hidden');
        },
        
        hideLoading() {
            document.getElementById('loading-overlay').classList.add('hidden');
        },
        
        showCSVPreview() {
            const csvPreviewSection = document.getElementById('csv-preview-section');
            if (csvPreviewSection) {
                csvPreviewSection.classList.remove('hidden');
            }
        },
        
        disableNextStep() {
            document.getElementById('next-step').disabled = true;
        },
        
        hasBaseEntry() {
            // Check for template entry in different possible selectors
            const templateEntrySelectors = [
                '#template-entry input[type="hidden"]',
                '[name="templateEntry"]',
                '[data-element-id]'
            ];

            for (const selector of templateEntrySelectors) {
                const element = document.querySelector(selector);
                if (element && element.value) {
                    return true;
                }
            }
            return false;
        },
        
        showValidationError(message = 'Complete the required fields') {
            const errorElement = document.getElementById('validation-error');
            if (errorElement) {
                errorElement.textContent = message;
                errorElement.classList.remove('hidden');
            }
        },
        
        hideValidationError() {
            const errorElement = document.getElementById('validation-error');
            if (errorElement) {
                errorElement.classList.add('hidden');
            }
        },

        showImportReport(data) {
            console.log('showImportReport called with data:', data);

            const overlay = document.getElementById('import-report-overlay');
            const summaryEl = document.getElementById('import-report-summary');
            const detailsEl = document.getElementById('import-report-details');

            console.log('Modal elements found:', {
                overlay: !!overlay,
                summaryEl: !!summaryEl,
                detailsEl: !!detailsEl
            });

            // Safe access to csvData with proper null checks
            // csvData structure: { success, headers, previewData, totalRows }
            const totalRows = this.csvData?.totalRows || 0;
            const skipFirstRow = document.getElementById('skip-first-row')?.checked || false;
            const expectedTotal = skipFirstRow && totalRows > 0 ? totalRows - 1 : totalRows;
            const importedCount = data.importedCount || 0;
            const failedCount = expectedTotal - importedCount;
            const errors = data.errors || [];

            console.log('Calculated stats:', {
                totalRows,
                skipFirstRow,
                expectedTotal,
                importedCount,
                failedCount,
                errorCount: errors.length
            });

            // Determine overall status
            let statusClass = 'success';
            let statusMessage = 'Import Completed Successfully';
            if (failedCount > 0 && importedCount === 0) {
                statusClass = 'error';
                statusMessage = 'Import Failed';
            } else if (failedCount > 0) {
                statusClass = 'warning';
                statusMessage = 'Import Completed with Errors';
            }

            // Build summary HTML
            summaryEl.className = 'import-report-summary ' + statusClass;
            summaryEl.innerHTML = `
                <h3 style="margin: 0 0 0.5rem 0; color: #2c3e50;">${statusMessage}</h3>
                <p style="margin: 0; color: #4a5568;">${data.message || 'Import process completed'}</p>
                <div class="import-stats">
                    <div class="import-stat">
                        <span class="import-stat-label">Total Rows</span>
                        <span class="import-stat-value">${expectedTotal}</span>
                    </div>
                    <div class="import-stat">
                        <span class="import-stat-label">Successfully Imported</span>
                        <span class="import-stat-value success">${importedCount}</span>
                    </div>
                    ${failedCount > 0 ? `
                    <div class="import-stat">
                        <span class="import-stat-label">Failed</span>
                        <span class="import-stat-value error">${failedCount}</span>
                    </div>
                    ` : ''}
                </div>
            `;

            // Build details HTML
            if (errors.length > 0) {
                let errorListHtml = '<ul class="error-list">';
                errors.forEach(error => {
                    errorListHtml += `
                        <li class="error-item">
                            <div class="error-message">${this.escapeHtml(error)}</div>
                        </li>
                    `;
                });
                errorListHtml += '</ul>';

                detailsEl.innerHTML = `
                    <h3>Error Details</h3>
                    ${errorListHtml}
                `;
            } else {
                detailsEl.innerHTML = `
                    <div class="no-errors-message">
                        All entries were imported successfully! No errors to report.
                    </div>
                `;
            }

            // Store report data for download
            this.lastImportReport = data;

            // Show modal
            overlay.classList.remove('hidden');

            // Setup close handlers
            document.getElementById('close-import-report').onclick = () => {
                this.closeImportReport(data.success && importedCount > 0);
            };
            document.getElementById('close-report-btn').onclick = () => {
                this.closeImportReport(data.success && importedCount > 0);
            };
            document.getElementById('download-error-report').onclick = () => {
                this.downloadErrorReport(data);
            };

            // Hide download button if no errors
            if (errors.length === 0) {
                document.getElementById('download-error-report').style.display = 'none';
            } else {
                document.getElementById('download-error-report').style.display = 'inline-block';
            }
        },

        closeImportReport(shouldReload) {
            document.getElementById('import-report-overlay').classList.add('hidden');
            if (shouldReload) {
                location.reload();
            }
        },

        downloadErrorReport(data) {
            const totalRows = this.csvData?.totalRows || 0;
            const skipFirstRow = document.getElementById('skip-first-row')?.checked || false;
            const expectedTotal = skipFirstRow && totalRows > 0 ? totalRows - 1 : totalRows;

            let reportText = '=== Import Error Report ===\n\n';
            reportText += `Date: ${new Date().toLocaleString()}\n`;
            reportText += `Total Rows: ${expectedTotal}\n`;
            reportText += `Successfully Imported: ${data.importedCount || 0}\n`;
            reportText += `Failed: ${expectedTotal - (data.importedCount || 0)}\n\n`;

            if (data.errors && data.errors.length > 0) {
                reportText += '=== Errors ===\n\n';
                data.errors.forEach((error, index) => {
                    reportText += `${index + 1}. ${error}\n`;
                });
            } else {
                reportText += 'No errors reported.\n';
            }

            // Create and download file
            const blob = new Blob([reportText], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `import-error-report-${Date.now()}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        },

        escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    };

    csvImporter.init();
});
</script>
